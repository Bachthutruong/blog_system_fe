{
  "name": "blog-backend",
  "version": "1.0.0",
  "description": "Backend API for blog system",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "npm run build && node dist/index.js",
    "start:prod": "node dist/index.js",
    "create-admin": "ts-node src/scripts/createAdmin.ts",
    "create-employee": "ts-node src/scripts/createEmployee.ts",
    "reset-admin": "ts-node src/scripts/resetAdminPassword.ts",
    "setup-users": "npm run create-admin && npm run create-employee",
    "test-db": "ts-node src/scripts/testConnection.ts",
    "check-env": "ts-node src/scripts/checkEnv.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "sharp": "^0.33.0",

    "helmet": "^7.1.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  }
}
